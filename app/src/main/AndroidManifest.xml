<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.waved.streetshout.waved" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="utils.WavedApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/WavedStyle" >
        <activity
            android:name="com.waved.streetshout.waved.activities.WelcomeActivity"
            android:label="@string/title_activity_welcome"
            android:theme="@style/WavedStyle.NoBar" >
>

        </activity>
        <activity
            android:name="com.waved.streetshout.waved.activities.PhoneValidationActivity"
            android:theme="@style/WavedStyle.NoBar"
            android:windowSoftInputMode="stateVisible" >
        </activity>
        <activity
            android:name="com.waved.streetshout.waved.activities.CodeConfirmationActivity"
            android:theme="@style/WavedStyle.NoBar"
            android:windowSoftInputMode="stateVisible" >
        </activity>
        <activity
            android:name="com.waved.streetshout.waved.activities.ProfilePictureActivity"
            android:label="@string/title_activity_profile_picture"
            android:theme="@style/WavedStyle.NoBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
