<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.waved.streetshout.waved.activities.ProfilePictureActivity">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:gravity="center">
            <TextView
                android:text="@string/profile_picture_add_picture"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/blue"/>

            <ImageView
                android:id="@+id/profile_picture_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_blue_border_shape"/>

            <Button
                android:id="@+id/profile_picture_profile_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"/>

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
